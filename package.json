{
  "name": "nodejs-server",
  "version": "1.0.0",
  "description": "NodeJS Application Server",
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --files ./main.js",
    "build": "tsc --build ./",
    "db": "sudo docker-compose up -d",
    "test": "npm run lint && tsc",
    "lint": "eslint . && prettier -c \"**/*.js\" \"**/*.ts\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.ts\""
  },
  "engines": {
    "node": "16 || 18 || 19"
  },
  "dependencies": {
    "pg": "^8.8.0",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/ws": "^8.5.4",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.2",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vovadoma/NodeJS-Server.git"
  },
  "author": "Volodymyr Hubarenko"
}
