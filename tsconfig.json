{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["esnext"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true,
    "typeRoots": [".src/types"],
    "types": ["node"],

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false
  },
  "include": ["*", "**/*"]
}
